{
  "include": [
    "src",
    "jest.config.js"
  ],
  "exclude": [
    "node_modules",
    "build",
    ".vscode"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "rootDirs": [
      "src",
    ],
    "outDir": "build",
    "declaration": true,
    "strict": true
  }
}
